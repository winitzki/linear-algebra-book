\begin_inset Formula \begin{align*}
\sum_{k=1}^{n}c_{k}q_{k} & =1,\\
\sum_{k=1}^{n}c_{k}q_{k+i} & =0,\quad i=1,...,n-1.\end{align*}

\end_inset

